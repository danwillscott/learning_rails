<nav>
  <div class="nav-wrapper">
    <a class="brand-logo center">Welcome</a>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
    </ul>
  </div>
</nav>

<div class="notice"><%= flash[:notice] %></div>

<div class="row"></div>
<div class="row"></div>
<div class=" large">
  <div class="card-content">
    <div class="row">
      <div class="col s6">
        <a href="/new" class="btn waves-effect waves-light" type="submit" name="action">
          <i class="material-icons">New User Page</i>
        </a>

    </div>
      <div class="col s4"> Total Users <%=	 @users.count %></div>
    </div>
    <table class="highlight centered responsive-table">
      <thead>
      <tr>
        <th data-field="first_name">First Name</th>
        <th data-field="last_name">Last Name</th>
        <th data-field="Email">Email Address</th>
        <th data-field="id">ID</th>
        <th data-field="Action">Edit</th>
      </tr>
      </thead>
      <tbody>
      <%	@users.each do |user|  %>
        <tr>
          <td><%= user.first_name  %></td>
          <td> <%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.id %></td>
          <td><a href="/delete<%= user.id %>" class="btn waves-effect waves-light red">Delete</a></td>
        </tr>
      <%	end  %>
      </tbody>
    </table>
<div class="row"></div>
    <div class="row">
      <form method="post" action="/find" class="col s6">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix"></i>
            <input name="search" id="icon_prefix" type="text" class="validate">
            <label for="icon_prefix">First Name</label>
          </div>
          <div class="input-field col s6">
            <button class="btn waves-effect waves-light" type="submit" name="action">
              <i class="material-icons">Find</i>
            </button>
          </div>
        </div>
      </form>
    </div>

    <% if flash[:not_found] %>
        <div id="card-alert" class="card yellow">
          <div class="card-content center black-text">
            <h5>Sorry : <%= flash[:not_found] %></h5>
          </div>
        </div>
    <% end %>


    <% if flash[:delete] %>
    <div id="card-alert" class="card red">
      <div class="card-content center white-text">
        <h5>DANGER : <%= flash[:delete] %></h5>
      </div>
    </div>
        <% end %>
  </div>
</div>


