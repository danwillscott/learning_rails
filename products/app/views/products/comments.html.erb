<br>
<div class=" large">
  <div class="card-content">
    <div class="row">
      <div class="col s4"><h4>Total Comments <%=	 @comments.count %></h4> </div>
    </div>
    <table class="highlight centered responsive-table">
      <thead>
      <tr>
        <th data-field="Product">Product Name</th>
        <th data-field="Comment">Comment</th>
      </tr>
      </thead>
      <tbody>
      <%	@comments.each do |com|  %>
          <tr>
            <td><%= com.product.name %></td>
            <td><%= com.comment  %></td>
          </tr>
      <%	end  %>
      </tbody>
    </table>
    <% if flash[:deleted] %>
        <div id="card-alert" class="card yellow">
          <div class="card-content center black-text">
            You Have Deleted The Fallowing User
            <ul>
              <li>Name: <%= flash[:deleted]['name'] %></li>
              <li>Category: <%= flash[:deleted]['category'] %></li>
              <li>Price: <%= flash[:deleted]['price'] %> </li>
            </ul>
          </div>
        </div>
    <% end %>
  </div>
</div>