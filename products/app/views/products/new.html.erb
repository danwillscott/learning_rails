<br>

<div class="row"></div>
<a href="/" class="btn waves-effect waves-light" type="submit" name="action">Return Home
  <i class="material-icons"></i>
</a>
<div class=" large">
  <div class="card-content">
    <div class="row">
      <form method="post" action="/new_product" class="col s12">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row">
          <div class="input-field col s4">
            <input name="name" type="text" class="validate">
            <label for="name">Name</label>
          </div>
          <% if flash[:name] %>
              <div class="input-field col s4">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:name] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s4">
            <input name="category" type="text" class="validate">
            <label for="category">Category</label>
          </div>
          <% if flash[:category] %>
              <div class="input-field col s4">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:category] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input name="description" type="text" class="validate">
            <label for="description">Description</label>
          </div>
          <% if flash[:description] %>
              <div class="input-field col s4">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:description] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input name="price" type="text" class="validate">
            <label for="price">Price</label>
          </div>
          <% if flash[:price] %>
              <div class="input-field col s4">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:price] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Add User
          <i class="material-icons"></i>
        </button>
        <div class="center">
        </div>
      </form>
    </div>
  </div>
</div>