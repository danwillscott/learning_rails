<div class="row"></div>
<a href="/" class="btn waves-effect waves-light" type="submit" name="action">Return Home
  <i class="material-icons"></i>
</a>
<div class=" large">
  <div class="card-content">
    <div class="row">
      <form method="post" action="/update_product<%=	@product.id  %>" class="col s5">
        <input type="hidden" name="_method" value="PATCH">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row">
          <div class="input-field col s12">
            <input name="name" type="text" class="validate">
            <label for="name">Name: <%= @product.name %></label>
          </div>
          <% if flash[:name] %>
              <div class="input-field col s12">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:name] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="category" type="text" class="validate">
            <label for="category">Category :<%= @product.category %></label>
          </div>
          <% if flash[:category] %>
              <div class="input-field col s12">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:category] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="description" type="text" class="validate">
            <label for="description">Description: <%= @product.description %></label>
          </div>
          <% if flash[:description] %>
              <div class="input-field col s12">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:description] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input name="price" type="text" class="validate">
            <label for="price">Price: <%= @product[:price] %></label>
          </div>
          <% if flash[:price] %>
              <div class="input-field col s12">
                <div id="card-alert" class="card red">
                  <div class="card-content center white-text">
                    <p>Sorry : <%= flash[:price] %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <input name="id" type="hidden" value="<%= @product.id %>">
        <button class="btn waves-effect waves-light" type="submit" name="action">Edit Product
          <i class="material-icons"></i>
        </button>
        <div class="center">
        </div>
      </form>
      <div class="row">
        <div class="col s5 m5">
          <div class="card-panel white">
              <span class="black-text">
                <span class="card-title">Current Product</span>
                <ul>
                  <li>Name: <%= @product.name %></li>
                  <li>Category: <%= @product.category %></li>
                  <li>Description: <%= @product.description %></li>
                  <li>Price: <%= @product.price %></li>
                </ul>
              </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>