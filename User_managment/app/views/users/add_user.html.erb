<nav>
  <div class="nav-wrapper">
    <a class="brand-logo center">Add New User</a>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
    </ul>
  </div>
</nav>

<div class="row"></div>
<a href="/" class="btn waves-effect waves-light" type="submit" name="action">Return Home
  <i class="material-icons"></i>
</a>
<div class=" large">
  <div class="card-content">
    <div class="row">
      <form method="post" action="/new_user" class="col s12">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="row">
          <div class="input-field col s4">
            <input name="first_name" type="text" class="validate">
            <label for="first_name">First Name</label>
          </div>
          <% if flash[:first_name] %>
            <div class="input-field col s4">
              <div id="card-alert" class="card red">
                <div class="card-content center white-text">
                  <p>Sorry : <%= flash[:first_name] %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s4">
            <input name="last_name" type="text" class="validate">
            <label for="last_name">Last Name</label>
          </div>
          <% if flash[:last_name] %>
            <div class="input-field col s4">
              <div id="card-alert" class="card red">
                <div class="card-content center white-text">
                  <p>Sorry : <%= flash[:last_name] %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input name="email" type="email" class="validate">
            <label for="email">Email</label>
          </div>
          <% if flash[:email] %>
            <div class="input-field col s4">
              <div id="card-alert" class="card red">
                <div class="card-content center white-text">
                  <p>Sorry : <%= flash[:email] %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input name="password" type="password" class="validate">
            <label for="password">Password</label>
          </div>
          <% if flash[:password] %>
            <div class="input-field col s4">
              <div id="card-alert" class="card red">
                <div class="card-content center white-text">
                  <p>Sorry : <%= flash[:password] %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Add User
          <i class="material-icons"></i>
        </button>
        <div class="center">
        </div>
      </form>
    </div>
  </div>
</div>



